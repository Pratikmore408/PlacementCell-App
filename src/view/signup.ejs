<%if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
    </div>
    <%}%>

<h1 class="mt-5 mb-4 ">Sign-Up</h1>

<form action="/signup" method="post" id="signupform">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" id="email">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password"  required>
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm-Password</label>
        <input type="password" class="form-control" id="password" name="confirmPassword" >
    </div>

    <button type="submit" class="g-recaptcha btn btn-primary" data-sitekey="6Lfxq4EpAAAAAJ6akqJW2CDzp_2zuWgkiwAkDNrq" data-callback="onSubmit">SignUp</button>

</form>
