<h1 class="mt-5 mb-4 " >Interviews</h1>

<a href="/interview/add" class="btn btn-primary" >Add Interview</a>
<br>
<br>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Company</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Details</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% interviews.forEach(interview=>{ %>
                    <tr>
                        <td><%= interview.student.name %></td> <!-- Print student name -->
                <td><%= interview.companyname %></td> <!-- Print company name -->
                <td><%= interview.date.toLocaleDateString() %></td> 
                <td><%= interview.date.toLocaleTimeString()  %></td> 
                <td> <!-- Print student details -->
                    <ul>
                        <li>Email: <%= interview.student.email %></li>
                        <li>Batch: <%= interview.student.batch %></li>
                        <li>College: <%= interview.student.college %></li>
                        <li>Status: <%= interview.student.status %></li>
                    </ul>
                </td>
                <td>
                    <ul>
                        <li><form  action="/interview/result" method="post">
                        <input type="hidden" name="interviewId" value="<%= interview._id %>">
                    <div class="form-floating">
                        <select class="form-select" name="result" id="floatingSelect" aria-label="Floating label select example" required>
                          <option selected>Open this  to select Interview Result</option>
                          <option value="PASS">PASS</option>
                          <option value="FAIL">FAIL</option>
                          <option value="ON_HOLD">ON-HOLD</option>
                          <option value="DID NOT ATTEMPT">DID NOT ATTEMPT</option>
                        </select>
                        <label for="floatingSelect">Select Result</label>
                      </div>
                      <button type="submit" class="btn btn-secondary">Add Result</button>                    
                    </form></li>
                    <%if(interview.result){%>
                        
                        <li>Result: <%= interview.result %></li>
                    
                    <%  }%>
                </ul>
                </td> 
                
                    </tr>
              <%  }) %>
              
            </tbody>
        </table>
