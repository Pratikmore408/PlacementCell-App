<%if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
    </div>
    <%}%>

<h1 class="mt-5 mb-4 ">Add Student</h1>

<form action="/student/add" method="post" >
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email ID:</label>
        <input type="email" class="form-control" name="email" id="email" required>
    </div>
    <div class="mb-3">
        <label for="batch" class="form-label">Batch:</label>
        <input type="number" class="form-control" name="batch" id="batch" required>
    </div>
    <div class="mb-3">
        <label for="college" class="form-label">College:</label>
        <input type="text" class="form-control" id="college" name="college"  required>
    </div>
    <div class="form-floating">
        <select class="form-select" name="status" id="floatingSelect" aria-label="Floating label select example" required>
          <option selected>Open this select menu</option>
          <option value="placed">Placed</option>
          <option value="not_placed">Not_Placed</option>
        </select>
        <label for="floatingSelect">Select Status</label>
      </div>
      <br>
    <div class="row">
        <div class="col">
            <label for="DSA_Final_Score" class="form-label">DSA_Final_Score:</label>
            <input type="number" class="form-control" id="DSA_Final_Score" name="DSA_Final_Score" min="0" max="100" required  >
        </div>
        <div class="col">
            <label for="WebD_Final_Score" class="form-label">WebD_Final_Score:</label>
            <input type="number" class="form-control" id="WebD_Final_Score" name="WebD_Final_Score" min="0" max="100" required>
        </div>
        <div class="col">
            <label for="React_Final_Score" class="form-label">React_Final_Score:</label>
            <input type="number" class="form-control" id="React_Final_Score" name="React_Final_Score" min="0" max="100" required>
          </div>
      </div>
      <br>

    <button  class="btn btn-primary" type="submit" >Add </a></button>

</form>
